/**index.wxss**/
.head{
  height: 44px;
  color: #333;
  background: #fff;
  line-height: 44px;
  font-size: 18px;
  text-align: center;
}
.head-active{
  color: #00beff;
}
.job-text{
  display: inline-block;
  padding: 0 20px;
}
.job-list{
  position: absolute;
  top: 54px;
  bottom: 0;
  box-sizing: border-box;


}
.job-item{
  padding: 5px 15px 10px ;
  margin-top: 10px;
  border-bottom: 1px solid #eee;
  background: #fff;
}
.container{
  position: absolute;
  top: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

}
.scroll-container{
  height: 100%;
}
.item-header{
  display: flex;
  font-size: 18px;
}
.job-name{
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 60%;
  flex: 1;
  line-height: 30px;
}
.job-salary{
  text-align: right;
  color: #ff6500;
  flex: 1;
  line-height: 30px;
}
.item-content{
  box-sizing: border-box;
  padding: 10px 0;
  display: flex;
}
.content-left{
  vertical-align: middle;
  width: 50px;
  height: 50px;
  border-radius: 4px;

}
.content-right{
  padding-left: 10px;
  font-size: 16px;
  line-height: 24px;
  flex: 1;
  overflow: hidden;
}
.job-company{
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
  height:24px;
  width: 100%;
}
.job-location{
  display: block;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
  height: 24px;
}
.advantage{
  word-break: break-all;
  color: #666;
  font-size: 16px;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 10px;

}
.interview-time{
  padding-top: 10px;
  font-size: 16px;
  color: #00beff;
}
