.online-job {
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}

.content {
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 54px;
}
.job-info{
  background: #fff;
  display: flex;
  flex-direction: row;
  padding: 10px 15px;
}
.job-name{
  flex: 1;
  font-size: 18px;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.job-salary{
  width: 40%;
  font-size: 18px;
  color:#ff6500;
  text-align: right;
}
.job-other-info{
  background: #fff;
  display: flex;
  padding: 10px 15px;
  border-bottom: 1px solid #eee;
  color: #666;
  line-height: 1;
  font-size:14px;
}
.job-flex{
  margin-right: 12px;
  max-width: 33%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.job-img{
  width: 18px;
  height: 18px;
  background-size: cover;
  vertical-align: middle;
  margin-right: 6px;
}
.job-desc{
  margin-top: 10px;
  background: #fff;
}
.job-desc-header{
  color: #333;
  padding: 0px 15px;
  font-size: 18px;
  line-height: 40px;
  border-bottom: 1px solid #eee;
}
.job-desc-content{
  padding: 10px 15px;
  color: #999;
  font-size: 14px;
}
.company-desc-content{
  padding: 10px 15px;
  color:#999;
  font-size: 14px;
  line-height: 20px;
  margin-bottom: 20px;
}
.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: #fff;
  padding: 10px 15px;
  height: 54px;
  display: flex;
  box-sizing: border-box;
}

.collect {
  flex: 1;
  height: 34px;
  line-height: 34px;
  margin-right: 5px;
  background: #ffaf00;
  color: #fff;
}

.im {
  flex: 1;
  height: 34px;
  line-height: 34px;
  margin-left: 5px;
  background: #00beff;
  color: #fff;
}